
  <div class="container" style="margin-top: 20px;margin-bottom: 20px;">
    <div class="left">
      <%= form_tag(sites_path, :method => "get", id: "search-form") do %>
          <%=text_field_tag :search,params[:search], placeholder: "Search Site..." %>
          <%= submit_tag 'SEARCH',:hospital_name=>nil,:class=>"btn btn-custom"%>
      <% end %>
    </div>
    <div class="right">
      <%if current_user.try(:admin?)%>
      <% end %>
      <%= link_to 'FILTER', new_site_path, :class=>"btn btn-custom pull-right" , :style=>"margin-left:10px;"%>
      <%= link_to 'ADD SITE', new_site_path, :class=>"btn btn-custom pull-right" , :style=>"margin-left:10px;"%>
    </div>
  </div>
  <div class="container">
  <div class="form-group" style="min-height: 500px;">
<table class="table table-responsive">
  <thead>
    <tr>
      <th>HOSPITAL</th>
      <th>CITY</th>
      <th>STATE</th>
      <th>ADDRESS</th>
      <th>PHONE NUMBER</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%=link_to site.hospital_name,site %></td>
        <td><%= site.city %></td>
        <td><%= site.status_options %></td>
        <td><%= site.address %></td>
        <td><%= site.phone_number %></td>
        <%if current_user.try(:admin?)%>
            <td><%= link_to 'Show', site %></td>
            <td><%= link_to 'Edit', edit_site_path(site) %></td>
            <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

        <%if current_user.try(:vip?)%>
            <td><%= link_to 'Show', site %></td>
            <td><%= link_to 'Edit', edit_site_path(site) %></td>
            <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

        <%if current_user.try(:user?)%>
            <td><%= link_to 'Show', site %></td>
            <td><%= link_to 'Edit', edit_site_path(site) %></td>
            <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
    <div>
      <%= form_tag import_sites_path, multipart: true do %>
          <%= file_field_tag :file , class: "form-control btn btn-custom",style:"margin-top:15px" %>
          <%= submit_tag "Import CSV",class: "btn btn-primary",style:"margin-top:15px"%>
      <% end %>
    </div>
  </div>
  </div>