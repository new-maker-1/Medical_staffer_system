<div class="container">
  <div class="page-header form-group">
    <%= link_to 'New Site', new_site_path, :class=>"btn btn-custom pull-right" , :style=>"margin-left:10px;"%>
    <h3>Listing Sites</h3>
  </div>

  <div class="form-group" style="min-height: 500px;">
<table class="table table-responsive">
  <thead>
    <tr>
      <th>Rails ID</th>
      <th>Hospital name</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th>Fax Number</th>
      <th>Po box</th>
      <th>Contacts name</th>
      <th>Contacts phone number</th>
      <th>Contacts email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.id %></td>
        <td><%=link_to site.hospital_name,site %></td>
        <td><%= site.address %></td>
        <td><%= site.phone_number %></td>
        <td><%= site.fax_number %></td>
        <td><%= site.po_box %></td>
        <td><%= site.contacts_name %></td>
        <td><%= site.contacts_phone_number %></td>
        <td><%= site.contacts_email %></td>
        <td><%= link_to 'Show', site %></td>
        <td><%= link_to 'Edit', edit_site_path(site) %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
  </div>