<div class="container">
  <div class="page-header form-group">
    <%= link_to 'New Shift', new_shift_path, :class=>"btn btn-custom pull-right" %>
    <h3>Listing Shifts</h3>
  </div>
<div class="form-group" style="min-height: 500px;">
<table class="table table-responsive">
  <thead>
    <tr>
      <th>Provider</th>
      <th>Site</th>
      <th>Date</th>
      <th>Shift</th>
      <th>Start time</th>
      <th>Start end</th>
      <th>Status</th>
      <th>Custom pay rate</th>
      <th>Custom bill rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.provider_id %></td>
        <td><%= shift.site_id %></td>
        <td><%= shift.date %></td>
        <td><%= shift.shift %></td>
        <td><%= shift.start_time %></td>
        <td><%= shift.start_end %></td>
        <td><%= shift.status %></td>
        <td><%= shift.custom_pay_rate %></td>
        <td><%= shift.custom_bill_rate %></td>
        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>